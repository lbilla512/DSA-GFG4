package com.example.demo;



public class TrailingZerosInFactorial {

	static int trailingZeros(int input) {
		
		//long factorial = LongStream.rangeClosed(1, input).reduce(1, (a, b) -> a*b);
		long factorial = input;
		for(int i=input -1; i>0;i--) {
			factorial = factorial * i;
		}
		System.out.println("factorial "+factorial);
		
		int trailingZeros = 0;
		while(factorial % 10 == 0) {
			trailingZeros++;
			factorial = factorial/10;
		}
		
		return trailingZeros;
		
	}
	public static void main(String args[]) {
		
		System.out.println(trailingZeros(5));
		System.out.println(trailingZeros(10));
		System.out.println(trailingZeros(100));
	}
	
}
